<% layout('/layouts/boilerplate') -%>
<body>
  <div class="filters mb-3">
<% for( type of filtersList ) { %>
    <a href="/listings/filters/<%= type.name %>" class="filter <%=filter === type.name ? 'selected' : '' %>">
      <div><i class="<%= type.url %>"></i></div>
      <div><%=type.name%></div>
    </a>
<% } %>
<div class=" tax form-check form-switch form-check-reverse">
  <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
  <label class="form-check-label tax-toggle-lable" for="flexSwitchCheckReverse">Include tax</label>
</div>
</div>
      
    <div class="row row-cols-lg-3 row-cols-m-2 row-cols-sm-1 mt-3">
      <% if (allListings.length) { %>
        <% for( let list of allListings ) { %>
        <a href="/listings/<%= list._id %> " class="listing-link">
          <div class="card col listing-card" >
              <img src="<%= list.image.url %>" class="card-img-top" alt="listing image" style="height: 22rem;">
              <div class="card-img-overlay">hi</div>
              <div class="card-body">
                <div class="card-text">
                  <b><%=list.title%></b>
                  <div class="card-text price">&#8377;<%= list.price.toLocaleString("en-IN")%>/Day</div>
                  <div class="card-text price2 disappear">&#8377;<%= (list.price+(list.price*0.18 )).toLocaleString("en-IN")%>/Day</div>
                </div>
              </div>
            </div>
          </a>
      <% }%>
    <% }else{ %>
    <div class="notFound ms-auto me-auto" >
      <h1>No Destinations Found </h1>
<a href="/listings/new" > Add new</a>
    
    </div>
      <% } %>
    </div>
</body>
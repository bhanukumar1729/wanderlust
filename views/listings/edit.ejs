<% layout('/layouts/boilerplate') -%>

    <body>

        <form action="/<%=listing._id %>?_method=PUT" method="post" class="needs-validation"
            enctype="multipart/form-data" novalidate>
            <div class="row mt-3">
                <div class="col-8 offset-2">
                    <h2>Edit this listing!</h2>
                    <div class="title mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" value="<%=listing.title%>" name="listing[title]"
                            required>
                        <div class="invalid-feedback">Title should be valid!</div>
                    </div>

                    <div class="description mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea type="text" class="form-control" name="listing[description]" required><%= listing.description %>
</textarea>
                        <div class="invalid-feedback">Description should be valid!</div>
                    </div>


                    <div class="img mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input type="file" class="form-control" value="<%=listing.image.url%>" name="listing[image]" >
                        
                    </div>

                    <div class="price mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" class="form-control" value="<%=listing.price%>" required
                            name="listing[price]">
                        <div class="invalid-feedback">Price should be valid!</div>
                    </div>
                    <h3>Choose destination features</h3><br>
                   <div class="filters-btn">
                    <% for( type of filtersList.splice(1)) { %>
                        <div class="form-check form-switch ">
                            <input class="checkbox"  type="checkbox" name="listing[filters]"  value="<%=type.name%>" id="flexCheckChecked<%=type.name%>" <%= listing.filters.includes(type.name)? "checked" :''%>>
                            <label class="form-check-label" for="flexCheckChecked<%=type.name%>"><%=type.name%></label>
                      </div>
                    <% } %>
                   </div>
                    <div class="row">
                        <div class="location mb-3 col-md-4">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" class="form-control" value="<%=listing.location%>" required
                                name="listing[location]">
                            <div class="invalid-feedback">Location should be valid!</div>
                        </div>
                        <div class="country mb-3 col-md-4">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" class="form-control" value="<%=listing.country%>" name="listing[country]"
                                required>
                            <div class="invalid-feedback">Country name should be valid!</div>
                        </div>
                    </div>
                    <button class="btn btn-dark add-btn">EDIT!</button>
                </div>
            </div>
        </form>
    </body>